@using System.Security.Claims

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class=" text-center"
    <header>
       <h1 id="welcomeMessage" class="display-4"> Welcome @User.FindFirst(ClaimTypes.Name).Value </h1>
       <script>
            var welcomeMessage = document.getElementById("welcomeMessage");
             function hideWelcomeMessage() 
             { welcomeMessage.style.display = "none"; }
            setTimeout(hideWelcomeMessage, 3000);
       </script>
    </header>
    <form id="logoutForm" asp-controller="User" asp-action="Logout" method="post">
        <button type="submit" class="btn btn-dark">Logout</button>
    </form>

    </div>
        <main>
            <h1 class="viewAllDoctor">
                <div class="view all Doctors">
                    <a asp-action="ViewAllDoctors" asp-controller="Doctor"> View all Doctors</a>
                </div>
            </h1>
        </main>
    <div>
        <main>
            <h1 class="viewAllPatient">
                <div class="view all Patients">
                    <a asp-action="ViewAllPatient" asp-controller="Patient"> View all Patients</a>
                </div>
            </h1>
        </main>
    </div>
</body>


