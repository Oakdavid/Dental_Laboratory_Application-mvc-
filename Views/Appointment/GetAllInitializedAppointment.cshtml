                @Html.DisplayFor(modelItem => item.Data)
            </td>
            
             <td>
                <a asp-action="AssignDoctorToAppointment" asp-controller="Appointment" asp-route-id="@item.Id">Assign</a>
             </td>
        </tr>
}
    </tbody>
</table>
