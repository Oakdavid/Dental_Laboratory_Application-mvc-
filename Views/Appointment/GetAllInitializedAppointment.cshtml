@model IEnumerable<Dental_lab_Application_MVC_.Models.Dtos.AppointmentDto>

@{
    ViewData["Title"] = "GetAllInitializedAppointment";
}

<h1>Get AllInitialized Appointment</h1>

<p>
    <a asp-action="GetAllInitializedAppointment">Get AllInitialized Appointment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorId)
