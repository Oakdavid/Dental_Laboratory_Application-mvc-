@using Dental_lab_Application_MVC_.Models.Enum
@model Dental_lab_Application_MVC_.Models.Dtos.AppointmentDto

@{
    Layout = null;
    ViewData["Title"] = "CreateAppointment";
}

<h1>RYC LAB</h1>
<h3>How can we help you?</h3>
<hr />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/BookAppointment.css" asp-append-version="true" />
</head>
<body>

<div class="row">
    <div class="col-md-3">
        <form asp-action="CreateAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="AppointmentType" class="control-label"></label>
             
                <select asp-for="AppointmentType" asp-items="Html.GetEnumSelectList<AppointmentType>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="BriefMessage" class="control-label"></label>
                <input asp-for="BriefMessage" class="form-control"/>
                <span asp-validation-for="BriefMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PatientDashBoard"> Return to Dash Board</a>
</div>
</body>

